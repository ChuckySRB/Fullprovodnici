<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/backgroundView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/record_screen1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_marginStart="175dp"
                android:layout_marginTop="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.43"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/record_page_info" />


            <LinearLayout
                android:id="@+id/rectangle00"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView5"
                app:layout_constraintWidth_percent="0.8"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tw01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="HOW TO USE TRUE SCREEN"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Choose the App to Record"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Select the app where you need to capture evidence (eg. messaging app, social media)."
                    android:textColor="#02033C" />

                <ImageView
                    android:id="@+id/imageView08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ovo" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rectangle01"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView5"
                app:layout_constraintWidth_percent="0.8"
                android:visibility="gone"
                >


                <TextView
                    android:id="@+id/tw11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="HOW TO USE TRUE SCREEN"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Start recording"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="TrueScreen app will automatically start recording after a 3-second countdown."
                    android:textColor="#02033C" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/Timer" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rectangle02"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView5"
                app:layout_constraintWidth_percent="0.8"
                android:visibility="gone"
                >


                <TextView
                    android:id="@+id/tw21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="HOW TO USE TRUE SCREEN"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Save and autenticate"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="The recording will be saved securely in your library, with unique authentication code ensuring its validity and preventing any tampering"
                    android:textColor="#02033C" />

                <ImageView
                    android:id="@+id/imageView28"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/Shield" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rectangle31"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/rounded_corners"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView5"
                app:layout_constraintWidth_percent="0.8"
                >


                <TextView
                    android:id="@+id/tw31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="HOW TO USE TRUE SCREEN"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="End recording"
                    android:textColor="#02033C"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="When you have recorded all necessary information, click on the 'End' button to stop recording."
                    android:textColor="#02033C" />

                <ImageView
                    android:id="@+id/imageView38"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/Stop_button" />

            </LinearLayout>

            <TextView
                android:id="@+id/select_text"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginTop="450dp"
                android:gravity="center"
                android:text="@string/text1_description"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/select_text">

                <!-- First Rectangle -->
                <LinearLayout
                    android:id="@+id/rectangle1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.8">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/wa_img" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="WHATSAPP"
                        android:textColor="#02033C"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:contentDescription="@string/button1_description"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="$FFFFFF"
                        android:src="@drawable/black_btn"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <!-- Second Rectangle -->
                <LinearLayout
                    android:id="@+id/rectangle2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_corners"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rectangle1"
                    app:layout_constraintWidth_percent="0.8">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/msg_img" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="MESSENGER"
                        android:textColor="#02033C"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/button1_description"
                        android:layout_marginTop="10dp"
                        android:background="$FFFFFF"
                        android:src="@drawable/black_btn"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

                <!-- Third Rectangle -->
                <LinearLayout
                    android:id="@+id/rectangle3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_corners"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rectangle2"
                    app:layout_constraintWidth_percent="0.8">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/snap_img" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SNAPCHAT"
                        android:layout_marginTop="10dp"
                        android:textColor="#02033C"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:contentDescription="@string/button1_description"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="$FFFFFF"
                        android:src="@drawable/black_btn"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageButton
                android:id="@+id/imageView10"
                android:layout_width="41dp"
                android:layout_height="47dp"
                android:layout_marginTop="264dp"
                android:contentDescription="@string/button1_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_left"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/imageView12"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="264dp"
                android:contentDescription="@string/button1_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow_right"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/backgroundView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="#8283FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/button1_description"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@drawable/first_button"
        app:layout_constraintBottom_toBottomOf="@id/backgroundView"
        app:layout_constraintStart_toStartOf="@id/backgroundView" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/button2_description"
        android:scaleType="fitCenter"
        android:padding="3dp"
        android:src="@drawable/second_button"
        app:layout_constraintBottom_toBottomOf="@id/backgroundView"
        app:layout_constraintStart_toEndOf="@id/button1" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/button3_description"
        android:scaleType="fitCenter"
        android:padding="6dp"
        android:src="@drawable/third_button"
        app:layout_constraintBottom_toBottomOf="@id/backgroundView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toEndOf="@id/button2" />

    <TextView
        android:id="@+id/label_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button1_description"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintEnd_toEndOf="@id/button1"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/label_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button2_description"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/button2"
        app:layout_constraintEnd_toEndOf="@id/button2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/label_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button3_description"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintStart_toStartOf="@id/button3"
        app:layout_constraintEnd_toEndOf="@id/button3"
        android:textColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>
